<Window x:Class="Exp1.AskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Дополнительные данные" Width="450" SizeToContent="Height" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
    <Grid Name="main">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock TextWrapping="Wrap" MaxWidth="450"  HorizontalAlignment="Left" Margin="6,6,0,0" Name="Question" Text="Here will be question?" VerticalAlignment="Top" />
            <Button Grid.Row="2" Content="Отменить" Height="23" HorizontalAlignment="Right" Margin="0,0,10,10" Name="cancelButton" VerticalAlignment="Bottom" Width="75" Click="cancelButton_Click" />
            <Button Grid.Row="2" Content="Сохранить" Height="23" HorizontalAlignment="Right" Margin="0,0,100,10" Name="saveButton" VerticalAlignment="Bottom" Width="75" Click="saveButton_Click" IsDefault="True" />
        </Grid>
        
    </Grid>
</Window>
