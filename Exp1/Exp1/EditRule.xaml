<Window x:Class="Exp1.EditRule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditRule" Height="304" Width="545">
    <Grid>
        <ScrollViewer Height="230" Width="520" VerticalAlignment="Top" >
            <Grid Name="editRule">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <WrapPanel Grid.Row="1" >
                    <TextBlock Text="Conditions:" VerticalAlignment="Center" />
                    <Button Width="20" Height="20" Margin="10,0,0,0" Click="Button_Click">
                        <Image Source="Resources\add.png" Height="16" />
                    </Button>
                </WrapPanel>
            </Grid>
        </ScrollViewer>
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="430,234,0,0" Name="cancelButton" VerticalAlignment="Top" Width="75" Click="cancelButton_Click" />
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="349,234,0,0" Name="saveButton" VerticalAlignment="Top" Width="75" Click="saveButton_Click" />
    </Grid>
</Window>
