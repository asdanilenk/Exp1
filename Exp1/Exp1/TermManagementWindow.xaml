        Title="Редактирование групп термов" Height="600" Width="800" MinWidth="800" MinHeight="600" WindowStartupLocation="CenterOwner">
    <Grid>
        <ScrollViewer Margin="5,30,5,5" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid Name="termEdit">
                
            </Grid>
        </ScrollViewer>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,4,6,0" VerticalAlignment="Top" Width="85" Click="addTermGroupButton_Click">
