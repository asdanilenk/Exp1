            <Image Source="Resources/add.png" />
            <TextBlock Margin="5,0,0,0">Добавить</TextBlock>
            </StackPanel>
        </Button>
        <Label Content="Группы термов:" Height="28" HorizontalAlignment="Left" Margin="7,6,0,0" VerticalAlignment="Top" />
    </Grid>
</Window>
