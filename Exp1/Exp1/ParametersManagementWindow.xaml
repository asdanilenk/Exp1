<Window x:Class="Exp1.ParametersManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование параметров" Height="600" Width="800" MinWidth="800" MinHeight="600" WindowStartupLocation="CenterOwner">
    <Grid>
        <ScrollViewer Margin="5,30,5,5" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid Name="paramEdit">
                
            </Grid>
        </ScrollViewer>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,4,6,0" VerticalAlignment="Top" Width="85" Click="addParameterButton_Click">
            <StackPanel Orientation="Horizontal">
            <Image Source="Resources/add.png" />
            <TextBlock Margin="5,0,0,0">Добавить</TextBlock>
            </StackPanel>
        </Button>
        <Label Content="Параметры:" Height="28" HorizontalAlignment="Left" Margin="7,6,0,0" Name="label1" VerticalAlignment="Top" />
    </Grid>
</Window>
